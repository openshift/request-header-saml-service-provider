{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "saml-auth",
        "creationTimestamp": null,
        "annotations": {
            "description": "SAML Authentication",
            "iconClass": "icon-shadowman",
            "tags": "instant-app,saml,authentication"
        }
    },
    "objects": [
        {
            "apiVersion": "v1",
            "kind": "Service",
            "metadata": {
                "annotations": {
                    "description": "Exposes and load balances the application pods"
                },
                "name": "saml-auth"
            },
            "spec": {
                "ports": [
                    {
                        "name": "web",
                        "port": 443,
                        "targetPort": 8443
                    }
                ],
                "selector": {
                    "name": "saml-auth"
                }
            }
        },
        {
            "apiVersion": "v1",
            "kind": "Route",
            "metadata": {
                "name": "saml-auth"
            },
            "spec": {
                "host": "${APPLICATION_DOMAIN}",
                "to": {
                    "kind": "Service",
                    "name": "saml-auth"
                },
                "tls": {
                    "termination": "passthrough"
                }
            }
        },
        {
            "apiVersion": "v1",
            "kind": "DeploymentConfig",
            "metadata": {
                "annotations": {
                    "description": "Defines how to deploy the application server"
                },
                "name": "saml-auth"
            },
            "spec": {
                "replicas": 0,
                "selector": {
                    "name": "saml-auth"
                },
                "strategy": {
                    "type": "Recreate"
                },
                "template": {
                    "metadata": {
                        "labels": {
                            "name": "saml-auth"
                        },
                        "name": "saml-auth"
                    },
                    "spec": {
                        "containers": [
                            {
                                "env": [
                                    {
                                        "name": "APPLICATION_DOMAIN",
                                        "value": "${APPLICATION_DOMAIN}"
                                    },
                                    {
                                        "name": "OSE_API_PUBLIC_URL",
                                        "value": "${OSE_API_PUBLIC_URL}"
                                    },
                                    {
                                        "name": "LOG_LEVEL",
                                        "value": "${LOG_LEVEL}"
                                    }

                                ],
                                "image": "${APPLICATION_IMAGE}",
                                "name": "saml-auth",
                                "ports": [
                                    {
                                        "containerPort": 8443
                                    }
                                ]
                            }
                        ]
                    }
                },
                "triggers": [
                    {
                        "imageChangeParams": {
                            "automatic": true,
                            "containerNames": [
                                "saml-auth"
                            ],
                            "from": {
                                "kind": "ImageStreamTag",
                                "name": "saml-service-provider:latest",
                                "namespace": "openshift3"
                            }
                        },
                        "type": "ImageChange"
                    },
                    {
                        "type": "ConfigChange"
                    }
                ]
            },
            "status": {}
        }
    ],
    "parameters": [
        {
            "name": "APPLICATION_DOMAIN",
            "description": "The exposed hostname that will route to the SAML service, if left blank a value will be defaulted."
        },
        {
            "name": "OSE_API_PUBLIC_URL",
            "description": "The OpenShift Enterprise API public URL"
        },
        {
            "name": "APPLICATION_IMAGE",
            "description": "The image that used to deploy the SAML app"
            "value": "openshift3/saml-service-provider"
        },
        {
            "name": "LOG_LEVEL",
            "description": "Logging level for mod_auth_mellon",
            "value": "info"
        }
    ],
    "labels": {
        "template": "saml-auth"
    }
}
